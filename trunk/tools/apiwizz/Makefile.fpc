#
#   Makefile.fpc for APIWizard for Free Pascal
#

[targets]
programs=apiwizz

[clean]
units=apiwizard

[require]
rtl=1
packages=fcl gtk

[presettings]
LAZDIR=../..

[dirs]
fpcdir=$(LAZDIR)/..
targetdir=.
unitdir=. $(LAZDIR)/lcl/units $(LAZDIR)/components/units 

[libs]


[rules]
all: 
        $(MAKE) --assume-new=apiwizz.pp apiwizz$(EXEEXT)
